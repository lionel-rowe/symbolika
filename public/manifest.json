    "16": "favicons/symbolika_logo_16.png",
    "32": "favicons/symbolika_logo_32.png",
    "64": "favicons/symbolika_logo_64.png",
    "128": "favicons/symbolika_logo_128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "favicons/symbolika_logo_16.png",
      "32": "favicons/symbolika_logo_32.png",
      "64": "favicons/symbolika_logo_64.png",
      "128": "favicons/symbolika_logo_128.png"
    },
    "default_title": "__MSG_extName__",
    "default_popup": "popup.html"
  },
  "commands": {
    "activateModal": {
      "suggested_key": {
        "default": "Ctrl+Comma",
        "mac": "Command+Comma"
      },
      "description": "__MSG_shortcutName__"
    }
