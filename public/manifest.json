{
  "name": "__MSG_extName__",
  "short_name": "__MSG_extName__",
  "author": "lionel.rowe@gmail.com",
  "description": "__MSG_extDesc__",
  "default_locale": "en",
  "manifest_version": 2,
  "permissions": [
    "contextMenus",
    "activeTab"
